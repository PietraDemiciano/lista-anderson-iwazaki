lgoritmo "QuocienteEResto"


variaveis
    numero1: inteiro
    numero2: inteiro
    quociente: inteiro
    resto: inteiro

inicio
    
    escreva("Digite o primeiro número inteiro: ")
    leia(numero1)
    escreva("Digite o segundo número inteiro: ")
    leia(numero2)

    
    se numero2 = 0 entao
        escreva("Erro: Divisão por zero não é permitida.\n")
    senao
        
        quociente := numero1 / numero2
        resto := numero1 % numero2

        
        escreva("O quociente da divisão de ", numero1, " por ", numero2, " é: ", quociente, "\n")
        escreva("O resto da divisão de ", numero1, " por ", numero2, " é: ", resto, "\n")
    fimse
fimalgoritmo
